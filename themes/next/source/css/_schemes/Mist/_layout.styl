// Tags
// --------------------------------------------------
hr {
  height: 2px;
  margin: 20px 0;
}

// Components
// --------------------------------------------------
.btn {
  padding: 0 10px;
}

.headband {
  display: none;
}

// Page - Container
// --------------------------------------------------
.main-inner {
  padding-bottom: 80px;

  +mobile() {
    width: auto;
  }
}

.content {
  padding-top: 80px;

  +mobile() {
    padding-top: 60px;
  }
}

// Post
.post-toc .nav .active-current > a,
.post-toc .nav .active > a {
  color: #71ad89;
  border-bottom: 1px solid #71ad89;
}
.post-toc .nav-item {
  line-height: 3;
  font-size: 15px;
}
.posts-expand .post-title, .posts-expand .post-meta {
  text-align: left!important;
}
.post-body a {
  color: #71ad89;
  &:hover {
    border-bottom-color: #71ad89;
  }
}


// Pagination
// --------------------------------------------------
.pagination {
  margin: 120px 0 0;
  text-align: left;

  +mobile() {
    margin: 80px 10px 0;
    text-align: center;
  }
}

// Footer
// --------------------------------------------------
.footer {
  background: #ebeee7;
  color: var(--text-color);
  padding: 10px 0;
}

.footer-inner {
  text-align: left;

  +mobile() {
    text-align: center;
    width: auto;
  }
}

// Sidebar
.sidebar {
  background: rgb(255,255,255);
  background: linear-gradient(148deg, rgba(255,255,255,1) 0%, rgba(193,203,197,1) 100%);
  box-shadow: inset 0 2px 8px #9eacab;
}

.sidebar-nav .sidebar-nav-active {
  border-bottom-color: #222;
  color: #222;
}

.sidebar a:hover,
.sidebar-nav a:hover
.sidebar-nav .sidebar-nav-active:hover,
.sidebar-nav li:hover {
  color: #222!important;
  border-bottom-color: #222!important;
}